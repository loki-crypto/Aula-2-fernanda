public class Main1 {
    public static void main(String[] args) {
        int x=2;
        switch (x){
            case 0:
                System.out.println("Opção 0 escolhida");
                break;
            case 1:
                System.out.println("Opção 1 escolhida");
                break;
            case 2:
                System.out.println("Opção 2 escolhida");
                break;
            default:
                System.out.println("Opção invalida");
        }
    }
}
